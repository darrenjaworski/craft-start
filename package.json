  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "browser-sync": "^2.17.0",
    "node-sass": "^3.10.1",
    "normalize.css": "^5.0.0",
    "npm-run-all": "^3.1.0",
